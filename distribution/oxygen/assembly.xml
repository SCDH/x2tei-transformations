<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
   <includeBaseDirectory>true</includeBaseDirectory>
   <baseDirectory>${project.artifactId}</baseDirectory>

   <id>oxygen-distribution</id>

   <formats>
      <format>jar</format>
   </formats>

   <fileSets>

      <fileSet>
         <directory>xsl</directory>
         <outputDirectory>xsl</outputDirectory>
         <includes>
            <include>**/*.xsl</include>
            <include>**/*.js</include>
            <include>**/*.json</include>
            <include>**/*.css</include>
            <include>**/*.sty</include>
         </includes>
      </fileSet>

      <fileSet>
         <directory>${project.build.directory}/generated-resources/xml/xslt</directory>
         <outputDirectory>/</outputDirectory>
         <includes>
            <include>saxon.*.xml</include>
         </includes>
      </fileSet>

      <!-- dependency resources are packetized, too -->
      <fileSet>
         <directory>${project.build.directory}/dependencies</directory>
         <outputDirectory>target/dependencies</outputDirectory>
      </fileSet>
      
   </fileSets>

   <files>
      <file>
         <source>saxon.xml</source>
         <outputDirectory>/</outputDirectory>
      </file>
      <file>
         <source>${project.basedir}/distribution/oxygen/plugin.xml</source>
         <outputDirectory>/</outputDirectory>
         <filtered>true</filtered>
      </file>
   </files>
</assembly>
